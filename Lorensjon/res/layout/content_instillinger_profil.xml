<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/net.bevster.lorensjon"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rel_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background" >

        <TextView
            android:id="@+id/info_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:text="@string/app_name" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skole"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/loren_spinner_skole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Søk"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <EditText
        android:id="@+id/loren_sok_tekst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RadioGroup
            android:id="@+id/loren_radio_sok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/loren_radio_sok_navn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Navn" />

            <RadioButton
                android:id="@+id/loren_radio_sok_klasse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Klasse" />

            <RadioButton
                android:id="@+id/loren_radio_sok_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID" />
        </RadioGroup>

        <Button
            android:id="@+id/loren_knapp_sok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Søk" />

    </LinearLayout>

    <Spinner
        android:id="@+id/loren_spinner_navn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>